<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8 px-5 py-3">
    <h2 class="pt-2"><%= t("views.user.new") %></h2>

    <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field my-3 col-md-6 col-sm-8">
          <i class="icon-envelope mx-1"></i>
          <%= f.label :Email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2" %>
        </div>

        <div class="field my-3 col-md-6 col-sm-8">
          <i class="icon-lock mx-1"></i>
          <%= f.label t("devise.registrations.edit.password") %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t("devise.passwords.edit.min") %>)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-2" %>
        </div>

        <div class="field my-3 col-md-6 col-sm-8">
          <i class="icon-lock mx-1"></i>
          <%= f.label t("devise.registrations.edit.pass_confirmation") %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mt-2" %>
        </div>

        <div class="actions col-md-6 col-sm-8">
          <%= f.submit t("views.buttons.reg"), class: "btn btn-primary", data: { turbo: false } %>
        </div>
      <% end %>

      <div class="py-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
