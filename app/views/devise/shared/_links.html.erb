<%- if controller_name != "sessions" %>
  <%= link_to t("views.nav-bar.login"), new_session_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.registerable? && controller_name != "registrations" %>
  <%= link_to t("views.buttons.reg"), new_registration_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <%= link_to t("views.user.forgot_password"), new_password_path(resource_name) %><br />
<% end %>
