<div class="col-md-6 my-2">
  <div class="thumbnail Regular shadow">
    <%= content_tag "div", "", class: "event-background",
      style: "background-image: url(https://i.gifer.com/6ob.gif)" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3 class="mx-3"><%= link_to event.title, event_path(event), data: { turbo: false } %></h3>
          <h3 class="mx-3"><small><%= l event.datetime, format: :long %></small></h3>
          <div class="buffer-both mx-3"><%= event.address %></div>
        </div>

        <div class="user-avatar mx-3 my-3">
          <% event.visitors.each do |user| %>
            <%= image_tag user_avatar(user), class: "img-icon", title: user.name %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
