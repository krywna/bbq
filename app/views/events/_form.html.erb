<%= form_for(@event) do |f| %>
  <%= render partial: "partials/form_errors", locals: { model: @event } %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: "form-control" %></p>
  </div>

  <div class="form-group mt-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="actions my-3">
    <%= f.submit t("views.buttons.create"), class: "btn btn-primary", data: { turbo: false } %>
    <%= t("views.buttons.or") %> <%= link_to t("views.buttons.back"), :back %>
  </div>
<% end %>
